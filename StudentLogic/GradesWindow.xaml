<Window x:Class="TRPZ_Kurs.GradesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grades" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Your Grades:" FontWeight="Bold" Margin="10"/>

        <ListView Name="GradesListView" Grid.Row="1" Margin="10">
            <!-- ItemsSource will be set programmatically -->
        </ListView>
    </Grid>
</Window>

