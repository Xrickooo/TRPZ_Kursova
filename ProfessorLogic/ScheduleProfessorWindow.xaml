<Window x:Class="TRPZ_Kurs.ProfessorLogic.ScheduleProfessorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Schedule Professor Window" Height="450" Width="500" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="DayDropDown" Grid.Row="0" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"
                  Width="150" SelectionChanged="DayDropDown_SelectionChanged"/>

        <ListView x:Name="ScheduleListView" Grid.Row="1" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <!-- Здесь будут отображаться данные расписания -->
        </ListView>
    </Grid>
</Window>


